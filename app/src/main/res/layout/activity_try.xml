<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:navigationIcon="@drawable/nav_arrow"
        app:title="Try Clothes"/>


    <Button
        android:id="@+id/select_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Clothing Image"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Original Image"
            android:textSize="16sp"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Segmented Result"
            android:textSize="16sp"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/original_image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:background="#f0f0f0"
            android:layout_marginEnd="4dp" />

        <ImageView
            android:id="@+id/result_image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:background="#f0f0f0"
            android:layout_marginStart="4dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/detected_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select an image to begin"
        android:textSize="14sp"
        android:padding="12dp"
        android:background="#e8f5e8"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnStartAR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start AR Try-On"
        android:enabled="false"
        android:backgroundTint="@color/design_default_color_primary" />
</LinearLayout>